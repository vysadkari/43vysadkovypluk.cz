---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  position: CollectionEntry<"positions">;
}

const { position } = Astro.props;
---

<a href={`/volna-mista/${position.slug}`}>
  <article
    class='group relative overflow-hidden rounded-lg drop-shadow-bold border border-black group'
  >
    <div class='relative'>
      <Image
        src={position.data.image}
        alt={position.data.title}
        class='w-full'
      />
      <div
        class='prose prose-invert bg-gradient-to-r from-primary to-primary-dark max-w-none inline-block absolute bottom-0 p-3 rounded-tr-lg drop-shadow-bold'
      >
        <h2 class='text-shadow text-xl lg:text-2xl'>{position.data.title}</h2>
      </div>
    </div>
    <div
      class='h-px bg-primary-dark group-hover:bg-primary transition-color duration-150'
    >
    </div>
    <div class='prose prose-invert max-w-none bg-black p-3 rounded-tr-lg'>
      <p class='text-shadow italic'>{position.data.description}</p>
    </div>
  </article>
</a>
